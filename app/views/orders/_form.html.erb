<%  if @order.errors.any? %>
    <div class="alert alert-danger">
    <ul>
    <% @order.errors.full_messages.each do|message| %>
    <li> 
        <%=  message %>
    </li>
    <% end  %>
    </ul> 
    </div>
<% end %>
<div>
<h1>Add Order</h1>
</div>

<%= form_for(@order, url: @order) do |f| %>
    <div class="form-group">
    order_for: <%= f.collection_select :order_for, Order::Meal, :to_s, :to_s, 
    :include_blank => false
     %>
    </div>
    <div class="form-group">
      <%= f.text_field(:restaurant , placeholder:'restaurant' ,class:"form-control col-sm-4" )%>
      </div>
      <div class="form-group">
      <%= f.text_field(:invited , placeholder:'friend name or Group name' ,class:"form-control col-sm-4" )%>
      </div>
      
      
     
      <div class="field form-group-row">
      <%= f.label :menu_pic %><br>
      <%= f.file_field :menu_pic, class: "btn btn-warning col-sm-4" %>
      </div><br>
  <div class="actions">
  <%= f.submit "Add", class: "btn btn-success btn-lg submitborder col-sm-4" %>
</div>
       <% end %>