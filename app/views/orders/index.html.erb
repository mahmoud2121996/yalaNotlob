<style>
  .button{
    display:inline-block
  }
</style>

<p></p>

<table class="table">
  <thead class="thead-dark">
    <tr>
      <th scope="col">Orders</th>
      <th scope="col">Restrunts</th>
      <th scope="col">Invited</th>
      <th scope="col">Joined</th>
      <th scope="col">Status</th>
      <th scope="col">Actions</th>
    </tr>
  </thead>
  <tbody>
  <% @orders.each do |order| %>
    <% order = Order.find(order.order_id)%>
    <tr>
      <td><%= order.order_for%></td>
      <td><%= order.restaurant%></td>
      <td><%= order.invited%></td>
      <td><%= order.joined%></td>
      <% if order.status == 0  && order.user_id == current_user.id%>
      <td>waiting</td>
      <td>
       <%= button_to 'view' ,order , method: :get ,class: "button"  %> 
       <%= button_to 'finish' ,order , method: :put , class: "button"  %> 
       <%= button_to 'cancel' ,order, method: :delete  , class: "button"%> 
      </td>
      <% elsif order.status == 0 %>
        <td>waiting</td>
        <td> 
          <%= button_to 'view', order , method: :get ,class:"button"%>
        </td>
      <% elsif order.status == 1 %>
      <td>finshed</td>
      <td> <%= button_to 'view' ,order , method: :get  %> </td>
      <%end %>
      
    </tr>
  <%end%>

  </tbody>
</table>