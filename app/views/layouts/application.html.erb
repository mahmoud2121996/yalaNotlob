<!DOCTYPE html>
<html>
  <head>
    <title>YalaNotlobSystem</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <% if user_signed_in? %>
      <nav class="navbar navbar-expand-lg navbar-light bg-primary">
        <a class="navbar-brand" href=<%= root_path%>>Blog</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav mr-auto">
            <li class="nav-item active">
                <%= link_to "edit profile", edit_user_registration_path, method: "get", class: "btn btn-secondary btn-sm"%>
                <%= link_to "logout", destroy_user_session_path, method: "delete", class: "btn btn-danger btn-sm"%>
            </li>
          </ul>
        </div>
      </nav>
  <% end %>
  <div class="container">
    <%= yield %>
  </div>
  </body>
</html>
