<!DOCTYPE html>
<html>
  <head>
    <title>YalaNotlobSystem</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <% if user_signed_in? %>
      <nav class="navbar navbar-expand-lg navbar-light" style="background: lightgray; height: 60px">
        <a class="navbar-brand" href=<%= root_path%>>Yala-Notlob</a>


        <a href="#" class="btn btn-warning" style="margin-left: 30px;">Home</a>
        <a href="#" class="btn btn-warning" style="margin-left: 10px;">Friends</a>
        <a href="#" class="btn btn-warning" style="margin-left: 10px">Groups</a>
        <a href="#" class="btn btn-warning" style="margin-left: 10px">Orders</a>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav mr-auto" style="margin-left: 450px;>
              <li class="nav-item active">
                  <%= image_tag current_user.avatar.url, :style => "width:40px;height:40px;margin-right:10px;" %>
                  <h6 class="mt-2"><%= current_user.name %></h6>
                  <%= link_to "edit profile", edit_user_registration_path, method: "get", class: "btn btn-primary btn-md", :style => "margin-right:10px;margin-left:10px" %>
                  <%= link_to "logout", destroy_user_session_path, method: "delete", class: "btn btn-danger btn-md" %>
              </li>
          </ul>
        </div>
      </nav>
  <% end %>
  <div class="container">
    <%= yield %>
  </div>
  </body>
</html>
